        <div class="logo-details">
            <span class="logo_name"><img src="img/Logo1.png" width="150px" alt=""></span>
        </div>
        <ul class="nav-links">
            <li>
                <a href="/instructorHome" >
                    <i class='bx bxs-home'></i>
                    <span class="link_name">Home</span>
                </a>
            </li>
            <li>
                <div class="iocn-link">
                    <a href="#">
                        <i class='bx bxs-user-detail' ></i>
                        <span class="link_name">Faculty Details</span>
                    </a>
                    <i class='bx bxs-chevron-down arrow'></i>
                </div>
                <ul class="sub-menu">
                    <li><a href="/viewInstructor" class="sub-list">View details</a></li>
                    <li><a href="/updateInstructor" class="sub-list">Update details</a></li>
                </ul>
            </li>
            <li>
                <a href="/instructorSemester">
                    <i class='bx bxs-report'></i>
                    <span class="link_name">Course Grades</span>
                </a>
            </li>
            <li>
                <a href="/instructorSemesterAttendance">
                    <i class='bx bxs-user-check bx-sm'></i>
                    <span class="link_name">Course Attendance</span>
                </a>
            </li>
            <li>
                <a href="/passwordInstructor">
                    <i class='bx bx-cog'></i>
                    <span class="link_name">Change Password</span>
