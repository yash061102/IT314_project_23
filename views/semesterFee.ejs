<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">

    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://fonts.googleapis.com/css2?family=Oleo+Script&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/table.css" />
    <link rel="icon" type="image/x-icon" href="/img/favicon.png">

    <title>Semester Fee</title>
</head>

<body>
    <%- include('studentNavbar') %>
    <div class="header">
        <h2>Semester Fees</h2>
    </div>
        <section class="home-section">
            <div class="table-container">
                <form action="/semesterFee" method="post">
                    <ul class="table-responsive-lg">
                        <li class="thead-dark">
                            <div class="col col-1">Semester Number</div>
                            <div class="col col-2">Semester Name</div>
                            <div class="col col-3">Fee Reciept</div>
                        </li>

                        <% for (var i=1; i <=semester.length; i++) { %>

                            <li class="table-row">
                                <div class="col col-1" data-label="#">
                                    Semester <%= i %>
                                </div>
                                <div class="col col-2" data-label="Student ID">
                                    <%= semester[i-1].name %>
                                </div>
                                <div class="col col-3" data-label="Name">
                                    <% var x=0 %>
                                        <% for (var j=0; j < history.length; j++) { %>

                                            <% if (history[j].semesterFee.id==semester[i-1].id) { %>

                                                <% if (history[j].feeStatus==true) { %>
                                                    <button class="view-btn" type="submit" name="view" value="<%=semester[i-1].id + " " + i%>"> View</button>
                                                    <% } else { %>
                                                        <p style="color:red" >pending</p>
                                                        <% } %>
                                                
                                                <% break; %>
                                            <% } %>
                                        <% } %>
                                </div>
                            </li>
                            <% } %>
                    </ul>
                </form>
            </div>
        </section>

</body>

</html>