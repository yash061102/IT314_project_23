<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">

    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://fonts.googleapis.com/css2?family=Oleo+Script&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/table.css" />
    <link rel="icon" type="image/x-icon" href="/img/favicon.png">

    <title>Assign Instructors</title>
</head>

<body>
    <%- include('adminNavbar') %>
        <!-- main body section -->
        <div class="header">
            <h2>Add Semester</h2>
        </div>
        <form action="/assignCourse" method="post">

            <section class="home-section">
                <div class="table-container">

                    <ul class="table-responsive-lg">
                <div class="row">
                    <div class="col-md-4 form-group mb-3">
                    <div class="data-container">
                        <p class="textfield" style="font-size:22px"><strong>Step2 </strong></p>
                    </div>
                     </div>
                    
                </div>
                </ul>
                </div>
                    <% for (var i=0; i <populatedSemester.programsOffered.length; i++) { %>
                    <div class="table-container">

                        <ul class="table-responsive-lg">
                            <div class="data-container">
                                <table class="data-table">                         
                                    <tr>
                                        <th><strong>Semester</strong></th>
                                        <td><%= populatedSemester.name %></td>
                                    </tr>
                                    <tr>
                                        <th><strong>Batch<%= i+1 %></strong></th>
                                        <td><%= populatedSemester.programsOffered[i].degreeOffered.name %>
                                            <%= populatedSemester.programsOffered[i].branchOffered.name %></td>
                                    </tr>
                                </table>
                            </div>
                            <li class="thead-dark">
                                <div class="col col-1">SR No</div>
                                <div class="col col-2">Course name</div>
                                <div class="col col-3">Course code</div>
                                <div class="col col-4">Course credits</div>
                                <div class="col col-5">Instructor</div>
                            </li>

                            <% for (var j=0; j <populatedSemester.programsOffered[i].coursesOffered.length; j++) { %>

                                <li class="table-row">
                                    <div class="col col-1" data-label="#">
                                        <%= j+1 %>
                                    </div>
                                    <div class="col col-2" data-label="Student ID">
                                        <%= populatedSemester.programsOffered[i].coursesOffered[j].name %>
                                    </div>
                                    <div class="col col-3" data-label="Name">
                                        <%= populatedSemester.programsOffered[i].coursesOffered[j].code %>
                                    </div>
                                    <div class="col col-4" data-label="Name">
                                        <%= populatedSemester.programsOffered[i].coursesOffered[j].credits %>
                                    </div>
                                    <div class="col col-5" data-label="Name">
                                        <select name="courseAssigned" id="">
                                            <option value="Select" selected required>Select</option>

                                            <% for (var k=0; k <instructor.length; k++) { %>

                                                <% var w=populatedSemester.id ; %>
                                                    <% var x=populatedSemester.programsOffered[i].id ; %>
                                                        <% var
                                                            y=populatedSemester.programsOffered[i].coursesOffered[j].id;
                                                            %>
                                                            <% var z=instructor[k].id; %>

                                                                <option value="<%= w + " " + x + " " + y + " " + z %>">
                                                                    <%= instructor[k].fullname %>
                                                                </option>
                                                                <% } %>

                                        </select>
                                    </div>
                                </li>
                                <% } %>
                        </ul>
                    </div>
                    <br>
                    <br>
                    <% } %>
                    
                    <div class="table-container">
                        <div class="input-field">
                            <button class="submit" type="submit">Submit</button>
                        </div>
                    </div>
                </section>
               
                
                 
        </form>

</body>

</html>