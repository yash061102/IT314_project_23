<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">

    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://fonts.googleapis.com/css2?family=Oleo+Script&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/table.css" />
    <link rel="stylesheet" href="/css/form.css">
    <link rel="icon" type="image/x-icon" href="/img/favicon.png">

    <title>Add Program</title>
</head>

<body>
    <%- include('adminNavbar') %>
        <div class="header">
            <h2>Add Programme</h2>
        </div>
      
            <form action="/addProgram" method="post" class="form">
                <div class="main-body-top">
                    <div class="show">
                    <div class="col-lg-9 form-group mb-3">
                        <label for="program" class="col-form-label" style="font-size:20px">Degree</label>
                        <select class="custom-select form-control" name="degree" id="degree" required>
                            <option class="form-control" value="select" selected disabled>Select</option>

                            <% for (var i=0; i <degree.length; i++) { %>
                                <option class="form-control" value="<%= degree[i].id %>">
                                    <%= degree[i].name %>
                                </option>
                                <% } %>

                        </select>
                    </div>
                    <div class="sub-header">
                        <button type="button" class="head-button" onclick="window.location.href='/viewDegree';">View degrees</button>
                    </div>
                </div>
                <div class="show">
                    <div class="col-lg-9 form-group mb-3">
                        <label for="program" class="col-form-label" style="font-size:20px">Branch</label>
                    <select class="custom-select form-control" name="branch" id="branch" required>
                        <option class="form-control" value="Select" selected disabled >Select</option>

                        <% for (var i=0; i <branch.length; i++) { %>
                            <option value="<%= branch[i].id %>">
                                <%= branch[i].name %>
                            </option>
                            <% } %>

                    </select>
                    <br>
                </div>
                <div class="sub-header">
                    <button type="button" class="head-button" onclick="window.location.href='/viewBranch';">View Branch</button>
                </div>
            </div>
                </div>
                <section class="home-section">
                    <div class="table-container">

                        <ul class="table-responsive-lg">
                            <li class="thead-dark">
                                <div class="col col-1">SR No</div>
                                <div class="col col-2">Name</div>
                                <div class="col col-3">Code</div>
                                <div class="col col-4">Credits</div>
                                <div class="col col-5">Select</div>
                            </li>

                            <% for (var i=0; i <course.length; i++) { %>

                                <li class="table-row">
                                    <div class="col col-1" data-label="#">
                                        <%= i+1 %>
                                    </div>
                                    <div class="col col-2" data-label="Student ID">
                                        <%= course[i].name %>
                                    </div>
                                    <div class="col col-3" data-label="Name">
                                        <%= course[i].code %>
                                    </div>
                                    <div class="col col-4" data-label="Batch">
                                        <%= course[i].credits %>
                                    </div>
                                    <div class="col col-5" data-label="Branch">
                                        <input style="accent-color:black; transform:scale(1.5);" type="checkbox" id="" name="course" value="<%= course[i].id %>"><span
                                            class="checkmark"></span>
                                    </div>
                                </li>
                                <% } %>
                        </ul>
                        <div class="input-field">
                            <button class="submit" type="submit">Submit</button>
                        </div>
                </section>
            </form>
  

</body>

</html>