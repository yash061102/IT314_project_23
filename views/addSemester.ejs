<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">

    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://fonts.googleapis.com/css2?family=Oleo+Script&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/table.css" />
    <title>Add semester</title>
</head>

<body>
    <%- include('adminNavbar') %>
        <!-- main body section -->
        <div class="header">
            <h2>Add Semester</h2>
        </div>
        <div class="sub-header">
            <h5> 
                Step - 1
            </h5>
        </div>
        <section class="home-section">
            <div class="table-container">
                <form action="/addSemester" method="post">
                    <input type="text" placeholder="Name" name="name">
                    <ul class="table-responsive-lg">
                        <li class="thead-dark">
                            <div class="col col-1">SR No</div>
                            <div class="col col-2">Program</div>
                            <div class="col col-3">Select</div>
                        </li>

                        <% for (var i=0; i <program.length; i++) { %>

                            <li class="table-row">
                                <div class="col col-1" data-label="#">
                                    <%= i+1 %>
                                </div>
                                <div class="col col-2" data-label="Student ID">
                                    <%= program[i].degreeOffered.name %>

                                        <%= program[i].branchOffered.name %>
                                </div>
                                <div class="col col-3" data-label="Name">
                                    <input type="checkbox" name="program" value="<%= program[i].id %>"><span
                                        class="checkmark"></span>
                                </div>
                            </li>
                            <% } %>
                    </ul>
                    <button type="submit">Next</button>
                </form>
            </div>
        </section>
</body>

</html>